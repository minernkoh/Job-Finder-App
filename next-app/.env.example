# API Configuration
# Backend API URL for the Next.js app (same-origin or external)
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# Environment
NODE_ENV=development

# MongoDB - local (Compass) or Atlas
MONGODB_URI=mongodb://localhost:27017/jobpulse

# JWT secrets - generate with: openssl rand -base64 32 (run twice)
JWT_SECRET=your_jwt_access_secret_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars

# Gemini AI - get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# Adzuna (job board search) - get from https://developer.adzuna.com/signup
ADZUNA_APP_ID=your_adzuna_app_id
ADZUNA_APP_KEY=your_adzuna_app_key

# Optional
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
JOB_SEARCH_CACHE_TTL=3600
NODE_ENV=development

# Admin signup at /admin (optional). If unset, POST /api/v1/auth/admin/register returns 403.
ADMIN_REGISTER_SECRET=your_secret_for_admin_signup

# API testing (Bruno/Postman): use withCredentials: true for all auth flows (login, refresh, protected endpoints).
